# Firebase Web Config
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# API base for Functions proxy
# If hosting Functions behind Firebase Hosting rewrite: keep as /api
# If calling the direct Cloud Functions URL, set it like:
# NEXT_PUBLIC_API_BASE=https://us-central1-<your-firebase-project-id>.cloudfunctions.net/api
NEXT_PUBLIC_API_BASE=/api